<div class="d-flex flex-column vh-100 background-img" style="max-height:100%;height:100%">
    <% include ./partials/message %>
    <div class="d-flex flex-row justify-content-between align-items-center mb-4 child-background-1">
        <a href="/article/addArticle" class="text-white text-decoration-none"><span><i
                    class="fas fa-arrow-circle-left"></i>Add Article</span></a>
        <a href="/article" class="text-white text-decoration-none"><span>Home<i
                    class="fas fa-arrow-circle-right"></i></span></a>
    </div>
    <h1 class="display-5 text-center text-white child-background-1">Articles Posted</h1>
    <ul class="nav d-flex flex-column child-background-1">
        <% for(var i = 0; i < articles.length; i++){ %>
        <li class="nav-item mb-4 mt-4 ml-4">
            <div class="card-group">
                <div class="card-opacity rounded">
                    <div class="card-body shadow">
                        <h5 class="card-title"><small
                                class="text-muted text-capitalize">Title:</small><%= articles[i].title %></h5>
                        <p class="card-text card-font-size"><%= articles[i].body %></p>
                        <p class="card-text"><small class="text-muted">By: <%= articles[i].author %></small></p>
                        <p class="card-text"><small class="text-muted">Posted at: <%= articles[i].date %></small></p>
                    </div>
                </div>
            </div>
        </li>
        <% } %>
    </ul>
</div>